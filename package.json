{
  "name": "@dellacagna/iban",
  "version": "1.0.0",
  "description": "Validate, format and generate IBAN numbers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dellacagna/iban.git"
  },
  "keywords": [
    "IBAN",
    "BBAN",
    "Validator",
    "Formatter",
    "Fake",
    "Generator",
    "Generate"
  ],
  "author": "Giovanni Della Cagna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dellacagna/iban/issues"
  },
  "homepage": "https://github.com/dellacagna/iban#readme",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist/**/*"
  ]
}
